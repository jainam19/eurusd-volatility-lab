name: rmd-render
on: [push, pull_request]
jobs:
  render:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: r-lib/actions/setup-r@v2
      - name: Install packages
        run: |
          Rscript -e 'source("install.R")'
      - name: Render Rmd
        run: |
          Rscript -e 'rmarkdown::render("notebooks/model.Rmd")'
